<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/bgd_item_room_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearance="@style/game_cornerNormalStyle"
        app:tint="@color/game_selector_color_scrim"
        app:tintMode="src_atop"
        tools:src="@mipmap/game_ic_launcher" />

    <TextView
        android:id="@+id/owner_item_room_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="4dp"
        android:textColor="@android:color/white"
        android:textIsSelectable="false"
        app:layout_constraintBottom_toTopOf="@id/name_item_room_list"
        app:layout_constraintEnd_toEndOf="@+id/bgd_item_room_list"
        app:layout_constraintStart_toStartOf="@+id/bgd_item_room_list"
        tools:text="@string/game_app_name" />

    <TextView
        android:id="@+id/name_item_room_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="4dp"
        android:paddingVertical="@dimen/game_space_normal"
        android:textColor="@android:color/white"
        android:textIsSelectable="false"
        app:layout_constraintBottom_toBottomOf="@+id/bgd_item_room_list"
        app:layout_constraintEnd_toEndOf="@+id/bgd_item_room_list"
        app:layout_constraintStart_toStartOf="@+id/bgd_item_room_list"
        tools:text="@string/game_app_name" />
</androidx.constraintlayout.widget.ConstraintLayout>
